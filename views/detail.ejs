<div class="container-fluid">
	<div class="col-md-12">
		<div class="row">
			<div class="col-md-12">
				<div class="panel panel-default" style="height:500px;">
					<div class="panel-heading">
						<h3 class="panel-title"><%=activity.name%></h3>
					</div>
					<div class="panel-body">
						<div class="col-md-4">
							<img alt="Bootstrap Image Preview" src="<%=activity.image%>" style="height:300px;object-fit:cover;" />
						</div>
						<div class="col-md-8">
							<p>
								<%=activity.fullDes%>
							</p>

							<p>
								Organizer:<%=activity.organizer%>
							</p>
							
							<p>
								Date:<%=activity.date%>
							</p>
						
							<p>
								Time:<%=activity.time%>
							</p>
							<p>
								Venue:<%=activity.venue%>
							</p>
							
							<p>
								Quota:<%=activity.quota%>
							</p>
							<form class="form-horizontal" role="form" action="/activity/registerOne" method="POST">
								<input name="id" value="<%=activity.id%>" type="hidden"/>
            			    <div class="form-group">
							<label  class="col-md-2 control-label"> </label>
							<div class="col-md-10">
								<button type="submit" class="btn btn-default">Register</button>
							</div>
					</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>